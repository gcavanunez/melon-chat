{
	"root": true,
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"@nuxtjs/eslint-config-typescript",
		"@vue/eslint-config-prettier"
	],
	"rules": {
		"comma-dangle": "off"
	},
	"overrides": [
		{
			"files": ["./server/**/*.ts"],
			"rules": {
				"no-console": [
					"error",
					{
						"allow": ["info", "warn", "trace", "error"]
					}
				]
			}
		}
	]
}
